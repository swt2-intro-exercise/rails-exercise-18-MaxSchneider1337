<%= form_with(model: @author, local: true) do |form| %>
  <%= form.label 'Vorname' %> <br>
  <%= form.text_field :first_name %> <br>

  <%= form.label 'Nachname' %> <br>
  <%= form.text_field :last_name %> <br>

  <%= form.label 'Homepage' %> <br>
  <%= form.text_field :homepage %> <br>

  <%= form.submit yield(:button_text) %>

<% end %>
