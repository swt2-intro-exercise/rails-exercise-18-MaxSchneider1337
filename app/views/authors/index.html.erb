<h1> Alle Autoren </h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
  </tr>
  <% @authors.each do |author| %>
    <tr>
      <td> <%= link_to author.name, author %> </td>
      <td> <%= link_to author.homepage, author.homepage %> </td>
      <td> <%= link_to 'edit' , edit_author_path(author) %> </td>
    </tr>
  <% end %>
</table>

<br>
<%= link_to 'neuen Autor erstellen', new_author_path %> <br>
